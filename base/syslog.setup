#!/usr/bin/env bash

SYSLOG_HOST=${SYSLOG_HOST:-}
SYSLOG_NAME=${SYSLOG_NAME:-}

if [[ -n ${SYSLOG_NAME} ]]; then
    SYSLOG_HOST=syslog
fi

if [[ -n ${SYSLOG_HOST} ]]; then
    echo "*.*  @${SYSLOG_HOST}" > /etc/syslog.conf
else
    echo "*.*    /dev/stdout" > /etc/syslog.conf
fi

if [[ -n ${SYSLOG_HOST} && $DEBUG -eq 1 ]]; then
    echo "*.*    /dev/stdout" >> /etc/syslog.conf
fi
