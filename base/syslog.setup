#!/usr/bin/env bash

SYSLOG_HOST=${SYSLOG_HOST:-}
SYSLOG_NAME=${SYSLOG_NAME:-}

if [[ -n ${SYSLOG_NAME} ]]; then
    SYSLOG_HOST=${SYSLOG_NAME}
fi

if [[ -n ${SYSLOG_HOST} ]]; then
    rm -f /etc/rsyslog.d/99-no-syslog.conf
    echo "*.*  @@${SYSLOG_HOST}" > /etc/rsyslog.d/99-remote-server.conf
fi

if [[ $DEBUG -eq 1 ]]; then
    rm -f /etc/rsyslog.d/99-no-syslog.conf
    echo "*.* /dev/stdout" > /etc/rsyslog.d/99-stdout.conf
fi
